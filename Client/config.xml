<?xml version='1.0' encoding='utf-8'?>
<widget id="com.coman3.Boxt" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Boxt</name>
    <description>
        Play multiplayer clasics such as Tic Tac Toe with all of your friends!
    </description>
    <author email="me@coman3.me" href="http://coman3.me">
        Lachlan van der Velden
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="EnableWebGL" value="true" />
    <preference name="StatusBarBackgroundColor" value="#f48f42" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!--
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon.png" width="48" height="48" />
        <icon src="res/ios/icon@2x.png" width="96" height="96" />
        <icon src="res/ios/icon@3x.png" width="144" height="144" />
    </platform>
    <plugin name="cordova-plugin-facebook4" spec="https://github.com/jeduan/cordova-plugin-facebook4">
        <variable name="APP_ID" value="195236404242557" />
        <variable name="APP_NAME" value="Boxt" />
    </plugin>
    <universal-links>
        <host name="boxt.coman3.xyz"></host>
</universal-links>
</widget>
